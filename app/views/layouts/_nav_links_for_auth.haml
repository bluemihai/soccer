- if user_signed_in?
  %li= link_to "Sign out #{current_user.full_name}", signout_path
  %li= image_tag current_user.gravatar(44)
- else
  %li
    %a{"data-dropdown" => "hover2", "data-options" => "is_hover:true; hover_timeout:200", href: "#"} Sign in...
    %ul#hover2.f-dropdown.tiny{"data-dropdown-content" => ""}
      %li
        = link_to google_signin_path do
          = image_tag('google_auth.png')
      %li
        = link_to facebook_signin_path do
          = image_tag('facebook_auth.png')

- if user_signed_in?
  - if current_user.try(:admin?)
    %li= link_to 'Users', users_path
