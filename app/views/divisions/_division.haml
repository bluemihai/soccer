.division
  %h4
    = division.full_name
    - if admin_or_manager?
      %sup= link_to image_tag('settings.png', size: 8), edit_division_path(division)
      %sup.blue= link_to 'x', division, method: :delete, data: {confirm: 'Are you sure you want to destroy this division?'}
  = render division.teams
