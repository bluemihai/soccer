%h1 EBSSL Teams

%table#teams.compact
  %thead
    %tr
      %th
      %th Name
      %th Manager
      %th Div
      %th
      %th
      %th

  %tbody
    - @teams.each do |team|
      %tr
        %td= team.short
        %td= team.name
        %td= team.manager.try(:name)
        %td= team.division_id
        %td= link_to 'Show', team
        %td= link_to 'Edit', edit_team_path(team)
        %td= link_to 'Destroy', team, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Team', new_team_path
