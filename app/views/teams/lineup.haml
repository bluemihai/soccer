#dashboard
  #field-container.group
    %h3= "#{@team.name} #{@team.formation.name} Line-Up"
    #field{ class: "#{@team.formation.id}"}
  .group
    #bench
      %h3 Subs
      .clear-both
      - @team.players.active_subs.each do |player|
        .bench-player
          = link_to player.first_name, edit_player_path(player)
          %br
    #on-roster.group
      %h3 Roster
      .clear-both
      - @team.players.inactive_subs.each do |player|
        .bench-player
          = link_to player.first_name, edit_player_path(player)
          %br
  #inactive.group
    %h3 Lineup
    .clear-both
    - @team.players.with_position.each do |player|
      .bench-player
        = "##{player.position}"
        = link_to player.first_name, edit_player_path(player)
        %br
