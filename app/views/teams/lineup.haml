#dashboard
  #field{ class: "#{@team.formation.id}"}
  #nonstarters
    %p
      / %b= @team.name
      / %br
      / %b= "#{@team.formation.name} Lineup"
      / %br
      / %br
      / Drag and drop players
      / %br
      / To strategize and make subs
      / %br
      / Don't forget the ball
    %button#persist-lineup{'disabled': 'true', 'data': {'disable_with': 'Saved...'} } Save
    #ball= image_tag('soccer.ball.svg', size: 30)

    #bench.group
      %h4 Subs
      .clear-both
      / - @team.players.active_subs.each do |player|
      /   .bench-player.sub{style: "background-color: #{POSITION_COLORS.with_indifferent_access[player.primary_position]}"}
      /     = player.position_request
      /     %br
      /     = link_to player.first_name, edit_player_path(player)
    #roster.group
      %h4 Roster
      .clear-both
      / - @team.players.inactive_subs.each do |player|
      /   .bench-player.inactive{style: "background-color: #{POSITION_COLORS.with_indifferent_access[player.primary_position]}"}
      /     = player.position_request
      /     %br
      /     = link_to player.first_name, edit_player_path(player)
      /     %br
